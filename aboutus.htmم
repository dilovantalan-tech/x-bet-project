    <script>
        // Update user avatar
        document.addEventListener('DOMContentLoaded', function() {
            const userAvatar = document.getElementById('userAvatar');
            if (userAvatar) {
                firebaseAuth.onAuthStateChanged(user => {
                    if (user && user.email) {
                        userAvatar.textContent = user.email[0].toUpperCase();
                    }
                });
            }
        });
    </script>
